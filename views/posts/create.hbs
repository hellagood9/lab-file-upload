<div class="container">
  <h1 class="title">Create a Post</h1>

<form class="form" action="/create" method="post" enctype="multipart/form-data">

  <div class="form-group">
    <label for="picName">Title:</label>
    <input type="text" name="picName">
  </div>

  <div class="form-group">
    <label for="content">Content:</label>
    <textarea name="content" cols="30" rows="10"></textarea>
  </div>


  <div class="form-group">
    <label for="picPath">Photo:</label>
    <input type="file" name="picPath">
  </div>


  <button type="submit">Create Post</button>
</form>
</div>